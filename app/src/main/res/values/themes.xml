<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPostRecruitmentTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="section_title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="section_details" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="section_details_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="section_more" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>
